      <div class="col-sm-12 centered">
        <a href="/weakQuestions"><button>GO BACK TO LIST</button></a>
      </div>
      <form class="col-sm-12 centered"  action="/weakQuestions/<%=theWeakQuestion._id%>/remove" method="post">
