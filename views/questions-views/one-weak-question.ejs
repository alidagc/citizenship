<div class="row">
  <div class="col-sm-12">
    <div class="question-group" class="row">
      <h3 class="category-header">CATEGORY:</h3><p><%= theWeakQuestion.category %></p>
      <br>
      <h3 class="category-header">SUBCATEGORY:</h3><p><%= theWeakQuestion.subcategory %></p>
      <h3 class="question centered">Q: <%=theWeakQuestion.question%></h3>
    </div>

    <div id="weak-question-answers">
      <p class="answer-header">ANSWERS: </p>
      <% theWeakQuestion.answers.forEach((oneAns)=>{ %>
        <p class="an-answer">â˜† <%=oneAns%></p>
      <%})%>
    </div>

