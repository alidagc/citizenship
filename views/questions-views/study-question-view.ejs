<div class="row">
  <div class="col-sm-12">
    <div class="question-group" class="row">
      <h3 class="category-header">CATEGORY:</h3><p><%= oneQ.category %></p>
      <br>
      <h3 class="category-header">SUBCATEGORY:</h3><p><%= oneQ.subcategory %></p>
      <h3 class="question centered">Q: <%=oneQ.question%></h3>
    </div>

    <div id="answers-list">
      <p class="answer-header">ANSWERS: </p>
      <% oneQ.answers.forEach((oneAns)=>{ %>
        <p class="an-answer">â˜† <%=oneAns%></p>
      <%})%>
    </div>

    <div id="show-answer" class="row centered">
      <button class="show-answer bttn-unite bttn-lg bttn-primary">SHOW ANSWER</button>
    </div>

    <div id="right-wrong-buttons" class="row">

      <form class="col-sm-4 centered" action="/question/<%=(counter - 2) %>" method="post">
        <button>< BACK </button>
      </form>

      <form class="col-sm-4 centered"  action="/question/<%=counter%>" method="post">
          <input type="hidden" name="failure" value="incorrect">
        <button>I GOT IT WRONG</button>
      </form>

      <form class="col-sm-4 centered" action="/question/<%=counter%>" method="post">
        <button>I GOT IT RIGHT > </button>
      </form>
    </div>

  </div>
</div>
